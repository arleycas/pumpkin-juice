<div class='container'>
  <div class='title-page'>
    <p>Agrega una nueva tarea</p>
  </div>
  <div class='row justify-content-md-center'>
    <div class='col col-sm-12 col-md-6'>

      <div class='card p-3'>
        <form action='/login' method='post'>
          <label for='inpUsername' class='form-label'>User</label>
          <input id='inpUsername' type='text' class='form-control' name='user' placeholder='User' />

          <label for='inpPassword' class='form-label'>Password</label>
          <input id='inpPassword' type='password' class='form-control' name='pass' placeholder='Password' />

          <div class='d-flex justify-content-center'>
            <button id='btnIngresar' type='submit' class='btn btn-primary' style='margin: 1rem;'>Ingresar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>